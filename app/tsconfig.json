{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "paths": {
      "@api/libs/splyt-api": [
        "../api/libs/splyt-api/src"
      ],
      "@api/packages/api-gateway": [
        "../api/packages/api-gateway/src"
      ],
      "@api/packages/splyt-taxis": [
        "../api/packages/splyt-taxis/src"
      ]
    }
  },
  "references": [
    {
      "path": "../api"
    }
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}
