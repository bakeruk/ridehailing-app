{
  "name": "@ridehailing/app",
  "description": "Ridehailing Nextjs app",
  "version": "0.1.0",
  "main": "src",
  "author": {
    "name": "Luke Baker",
    "email": "luke.baker@live.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.13.2",
    "npm": ">=6.14.15",
    "yarn": ">=3.1.1"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "cy:run": "yarn cypress run",
    "cy:open": "yarn cypress open",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/material": "^5.3.0",
    "@mui/styled-engine-sc": "^5.3.0",
    "@mui/system": "^5.3.0",
    "@ridehailing/api": "workspace:^",
    "axios": "^0.25.0",
    "haversine": "^1.1.1",
    "mapbox-gl": "^2.6.1",
    "next": "12.0.8",
    "polished": "^4.1.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.3.1",
    "react-map-gl": "^6.1.18",
    "react-query": "^3.34.8",
    "react-spinners": "^0.11.0",
    "react-toastify": "^8.1.0",
    "styled-components": "^5.3.3",
    "styled-reset": "^4.3.4"
  },
  "devDependencies": {
    "@types/haversine": "^1",
    "@types/jest": "^27.4.0",
    "@types/mapbox-gl": "^2",
    "@types/node": "17.0.8",
    "@types/react": "17.0.38",
    "@types/react-dom": "^17",
    "@types/styled-components": "^5",
    "babel-plugin-styled-components": "^2.0.2",
    "cypress": "^9.2.1",
    "jest": "^27.4.7",
    "jest-config": "^27.4.7",
    "ts-jest": "^27.1.3",
    "typescript": "4.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src(|/.*)$": "<rootDir>/src/$1"
    }
  }
}
